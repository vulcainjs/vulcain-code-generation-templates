apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  labels:
    serviceName: <%= state.service %>
    serviceVersion: "<%= state.version %>"
  name: <%= state.fullServiceName %>
spec:
  replicas: 1
  selector:
    matchLabels:
      serviceName: <%= state.service %>
      serviceVersion: "<%= state.version %>"
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      labels:
        serviceName: <%= state.service %>
        serviceVersion: "<%= state.version %>"
    spec:
      containers:
        - image: <%= state.image %>
          name: <%= state.service %>
          livenessProbe:
            httpGet:
              path: /health
              port: 8080
            initialDelaySeconds: 3
            timeoutSeconds: 1
            periodSeconds: 10
            failureThreshold: 1
          ports:
            - containerPort: 8080
              name: http
              protocol: TCP
---
kind: Service
apiVersion: v1
metadata:
  name: <%= state.fullServiceName %>
spec:
  ports:
    - name: http
      port: 8080
  selector:
      serviceName: <%= state.service %>
      serviceVersion: "<%= state.version %>"
  type: NodePort